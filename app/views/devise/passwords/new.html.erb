<div class="jumbotron">
<h2 class="manage_bike">Forgot your password? </h2>
<div class="container">
        <div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">BikeReady</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                  <div class="col-xs-6 col-sm-6 col-md-6">
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), role:"form") do |f| %>
                    <%= devise_error_messages! %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.text_field :email, autofocus: true, id:'email', class:"form-control input-sm", placeholder:"Email address"  %>
                </div>
                  <%= f.submit "submit", class:"btn btn-info btn-block" %>
                  <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>